<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">


    <!--    For Auction     -->
    <virtualType name="EmiproAuctionAuctionFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="EmiproAuctionAuctionFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Emipro\Auction\Model\ResourceModel\Auction\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">EmiproAuctionAuctionFilterPool</argument>
        </arguments>
    </virtualType>
    <type name="Emipro\Auction\Model\ResourceModel\Auction\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">emipro_auction</argument>
            <argument name="eventPrefix" xsi:type="string">emipro_auction_auction_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">auction_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Emipro\Auction\Model\ResourceModel\Auction</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="emipro_auction_auction_listing_data_source" xsi:type="string">Emipro\Auction\Model\ResourceModel\Auction\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <preference for="Magento\Catalog\Controller\Product\View" type="Emipro\Auction\Controller\Product\View" />
    <preference for="Magento\Catalog\Controller\Category\View" type="Emipro\Auction\Controller\Category\View" />

</config>
