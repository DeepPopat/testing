<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">auction_edit_form.auction_edit_form_data_source</item>
            <item name="deps" xsi:type="string">auction_edit_form.auction_edit_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Auction Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">auction_edit_form</item>
        </item>
        <item name="spinner" xsi:type="string">auction_information</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Emipro\Auction\Block\Adminhtml\Index\Edit\Button\Back</item>
            <item name="delete" xsi:type="string">Emipro\Auction\Block\Adminhtml\Index\Edit\Button\EditDelete</item>
            <item name="reset" xsi:type="string">Emipro\Auction\Block\Adminhtml\Index\Edit\Button\EditReset</item>
            <item name="save" xsi:type="string">Emipro\Auction\Block\Adminhtml\Index\Edit\Button\EditSave</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="auction_edit_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Emipro\Auction\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">auction_edit_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">auction_id</argument>
            <argument name="requestFieldName" xsi:type="string">auction_id</argument>
            <argument name="data" xsi:type="array">
              <item name="config" xsi:type="array">
                 <item name="submit_url" xsi:type="url" path="*/*/save"/>
              </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="auction_information">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Auction Information</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="product_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Auction Product</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">product_id</item>
                    <item name="dataScope" xsi:type="string">product_id</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                    <item name="notice" xsi:type="string" translate="true">* Type product name or sku. If product is already assigned to other auction then product will not display in search list.</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Auction Title</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">title</item>
                    <item name="dataScope" xsi:type="string">title</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="min_price">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">Minimum Bid Price</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">min_price</item>
                    <item name="dataScope" xsi:type="string">min_price</item>
                    <item name="notice" xsi:type="string" translate="true">* Auction will start from this price.</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-number" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="reserved_price">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">Reserve Price</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">reserved_price</item>
                    <item name="dataScope" xsi:type="string">reserved_price</item>
                    <item name="notice" xsi:type="string" translate="true">* If the Closing Price is lower than the Reserve Price, then there will not be any auction winner.</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-number" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="start_time">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Auction Start Date and Time</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">start_time</item>
                    <item name="dataScope" xsi:type="string">start_time</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="options" xsi:type="array">
                        <item name="timeFormat" xsi:type="string">HH:mm:ss</item>
                        <item name="showsTime" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="end_time">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Auction End Date and Time</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">end_time</item>
                    <item name="dataScope" xsi:type="string">end_time</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="options" xsi:type="array">
                        <item name="timeFormat" xsi:type="string">HH:mm:ss</item>
                        <item name="showsTime" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="min_price_gap">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Minimum Price Gap</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">min_price_gap</item>
                    <item name="dataScope" xsi:type="string">min_price_gap</item>
                    <item name="notice" xsi:type="string" translate="true">* Minimum price difference between two bids.</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-number" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="max_price_gap">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Maximum Price Gap</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">max_price_gap</item>
                    <item name="dataScope" xsi:type="string">max_price_gap</item>
                    <item name="notice" xsi:type="string" translate="true">* Maximum price difference between two bids.</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-number" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="auto_extend">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Auto Extend Time Enable/Disable</item>
                    <item name="component" xsi:type="string">Emipro_Auction/js/form/element/options</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="source" xsi:type="string">auto_extend</item>
                    <item name="dataScope" xsi:type="string">auto_extend</item>
                    <item name="notice" xsi:type="string" translate="true">* If in last X seconds bidder will place the bid, then auction close time will be increased Y seconds.</item>
                    <item name="options" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="label" xsi:type="string">No</item>
                            <item name="value" xsi:type="string">0</item>
                        </item>
                        <item name="1" xsi:type="array">
                            <item name="label" xsi:type="string">Yes</item>
                            <item name="value" xsi:type="string">1</item>
                        </item>
                    </item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="auto_extend_time_left">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Time before auction end(second)(X)</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">auto_extend_time_left</item>
                    <item name="dataScope" xsi:type="string">auto_extend_time_left</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="visibleValue" xsi:type="string">1</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-digits" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="auto_extend_time">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Time to extend auction end(second)(Y)</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">auto_extend_time</item>
                    <item name="dataScope" xsi:type="string">auto_extend_time</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="visibleValue" xsi:type="string">1</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-digits" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="customer_group_ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">Customer Group</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="source" xsi:type="string">customer_group_ids</item>
                    <item name="dataScope" xsi:type="string">customer_group_ids</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
                <item name="options" xsi:type="object">Emipro\Auction\Model\Rule\CustomerGroupsOptionsProvider</item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="bid_info">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Bid Information</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">30</item>
            </item>
        </argument>
        <container name="auction_bid_container" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <argument name="block" xsi:type="object">Emipro\Auction\Block\Adminhtml\Index\Displaybid</argument>
            </htmlContent>
        </container>
    </fieldset>
    <fieldset name="watchlist_info">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Watchlist Information</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">40</item>
            </item>
        </argument>
        <container name="auction_watchlist_container" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <argument name="block" xsi:type="object">Emipro\Auction\Block\Adminhtml\Index\Displaywatchlist</argument>
            </htmlContent>
        </container>
    </fieldset>
</form>